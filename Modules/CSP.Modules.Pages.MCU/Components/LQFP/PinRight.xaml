<components:PinBase
    x:Class="CSP.Modules.Pages.MCU.Components.LQFP.PinRight"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:components="clr-namespace:CSP.Modules.Pages.MCU.Components"
    Width="500"
    Height="30">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="400" />
        </Grid.ColumnDefinitions>
        <Border
            Grid.Column="0"
            Margin="0,0.5"
            Background="Black">
            <Button
                x:Name="ButtonPin"
                Margin="-2,1.5,1.5,1.5"
                x:FieldModifier="private"
                Background="#b9c4ca"
                Content="Pin"
                Cursor="Hand"
                FontSize="14"
                PreviewMouseLeftButtonDown="OnPinNameClick">
                <Button.ContextMenu>
                    <ContextMenu Name="ButtonPinContextMenu" />
                </Button.ContextMenu>
            </Button>
        </Border>
        <TextBlock
            x:Name="TextBlockNote"
            Grid.Column="1"
            Padding="10,0,0,0"
            VerticalAlignment="Center"
            x:FieldModifier="private"
            FontSize="20"
            Text="Note"
            TextAlignment="Left" />
    </Grid>
</components:PinBase>
